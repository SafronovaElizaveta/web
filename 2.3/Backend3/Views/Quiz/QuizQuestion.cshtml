@model Backend3.Models.QuizModel
@{
    ViewBag.Title = "Quiz question";
}

<h2>Quiz question</h2>

<form asp-action="QuizQuestion" class="form-horizontal">
    <div class="form-group">
        <label class="col-md-2 control-label">@Model.FirstInt @Model.ArithmeticOperator @Model.SecondInt = </label>

        <div class="col-md-10">
            <input asp-for="@Model.Result" type="number" class="form-control" />
        </div>

        <input type="hidden" asp-for="@Model.FirstInt" />
        <input type="hidden" asp-for="@Model.ArithmeticOperator" />
        <input type="hidden" asp-for="@Model.SecondInt" />

        @for (var i = 0; i < Model.Expressions.Count; i++)
        {
            <input type="hidden" asp-for="@Model.Expressions[i].FirstInt" />
            <input type="hidden" asp-for="@Model.Expressions[i].ArithmeticOperator" />
            <input type="hidden" asp-for="@Model.Expressions[i].SecondInt" />
            <input type="hidden" asp-for="@Model.Expressions[i].Result" />
            <input type="hidden" asp-for="@Model.Expressions[i].Correct" />
        }
    </div>

    <div class="form-group">
        <div class="col-md-10 col-md-offset-2">
            <button class="btn btn-default" type="submit" name="Action" value="Next">Submit</button>
            <button class="btn btn-primary" type="submit" name="Action" value="Finish">Finish</button>
        </div>
    </div>
</form>